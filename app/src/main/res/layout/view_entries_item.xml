<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="entry"
                type="cz.ciompa.frantisek.mylifeinpain.domain.entity.Entry"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/entries_item_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:id="@+id/textViewDescription"
                android:text="@{entry.description}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                tools:text="entry.description"/>

        <TextView
                android:id="@+id/textViewEntryDate"
                android:text="@{entry.entryDateToString}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="entry.entryDateToString"/>

        <TextView
                android:text="@{entry.intensityToString}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewIntensity"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewEntryDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="entry.intensityToString"/>

        <TextView
                android:text="@{entry.note}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNote"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewIntensity"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="entry.note"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
