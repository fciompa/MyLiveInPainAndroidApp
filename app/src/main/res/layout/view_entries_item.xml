<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="viewModel"
                type="cz.ciompa.frantisek.mylifeinpain.entry.EntryViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/entries_item_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:text="@{viewModel.entry.idToString}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewId"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="entry.id"
                android:layout_marginStart="8dp"/>

        <TextView
                android:id="@+id/textViewDescription"
                android:text="@{viewModel.entry.description}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                tools:text="entry.description"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewId"/>

        <TextView
                android:id="@+id/textViewEntryDate"
                android:text="@{viewModel.entry.entryDateToString}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="entry.entryDateToString"/>

        <TextView
                android:text="@{viewModel.entry.intensityToString}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewIntensity"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewEntryDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="entry.intensityToString"/>

        <TextView
                android:text="@{viewModel.entry.note}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNote"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewIntensity"
                tools:text="entry.note"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                android:text="@string/view_entries_item_button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="8dp"
                android:onClick="@{() -> viewModel.save()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNote"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
